{
  "title": "Prelodr",
  "name": "prelodr",
  "version": "2.0.0",
  "description": "A simple Material preloader inspired in Google Inbox",
  "keywords": [
    "preloader",
    "minimal",
    "responsive",
    "ui",
    "material-design",
    "jquery-plugin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/quintana-dev/prelodr.git"
  },
  "author": {
    "name": "JosÃ© Luis Quintana",
    "url": "http://git.io/joseluisq"
  },
  "dependencies": {
    "emitus": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.8.0",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "banr-stream": "^1.0.2",
    "browser-sync": "^2.13.0",
    "browserify": "^13.0.1",
    "clean-css": "^3.4.18",
    "node-sass": "^3.8.0",
    "tape": "^4.6.0",
    "uglify-js": "^2.6.4",
    "watchify": "^3.7.0"
  },
  "main": "./dist/prelodr.min.js",
  "engines": {
    "node": ">=4.0"
  },
  "scripts": {
    "postinstall": "mkdir -p .tmp",
    "build:js": "babel src/prelodr.js| uglifyjs --stats -vmc | banr-stream > dist/prelodr.min.js",
    "xbuild:js": "browserify -t [ babelify ] examples/main.js | uglifyjs --stats -vmc > .tmp/bundle.js",
    "build:css": "node-sass src/prelodr.scss dist/prelodr.min.css && cleancss dist/prelodr.min.css -do dist/prelodr.min.css",
    "watch:js": "watchify -t [ babelify ] examples/main.js -o .tmp/bundle.js -dv",
    "watch:css": "node-sass src/prelodr.scss dist/prelodr.min.css -w",
    "build": "npm run build:js & npm run build:css",
    "watch": "npm run watch:css & npm run watch:js",
    "dev": "npm run build:css && npm run build:js && npm run xbuild:js && (npm run server & npm run watch)",
    "server": "browser-sync start --server '.tmp' --server 'examples' --server 'dist' --port 7001 --files 'examples/{,*/}*.html' --files 'dist/prelodr.min.css' --files '.tmp/bundle.js'",
    "start": "npm run dev"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-es2015-modules-umd",
      "transform-object-assign"
    ]
  }
}
